<%= form_with(model: [@post, @comment], url: user_post_comments_path(@post.author, @post), local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :text, "Add your comment", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :text, class: "form-input mt-1 p-2 w-full rounded-md border border-gray-300" %>
  </div>

  <%= button_tag("Submit", class: "bg-green-500 text-white px-4 py-2 rounded-md") %>
<% end %>
