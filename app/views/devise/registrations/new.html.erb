<div class="max-w-md w-5/6 mx-auto mt-8 bg-white p-6 rounded-md shadow-md">
  <h2 class="text-2xl font-semibold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
    <div class="absolute top-0 left-auto bg-white text-red-500">
      <%= render "devise/shared/error_messages" , resource: resource %>
    </div>

    <div class="space-y-2">
      <%= f.label :name, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_field :name, autofocus: true, class: 'w-full px-3 py-2 border border-gray-300 rounded-md' %>
    </div>

    <div class="space-y-2">
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.email_field :email, autocomplete: "email", class: 'w-full px-3 py-2 border border-gray-300 rounded-md' %>
    </div>

    <div class="space-y-2">
      <%= f.label :bio, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_area :bio, class: 'w-full px-3 py-2 border border-gray-300 rounded-md', rows: 3 %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md' %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md' %>
    </div>

    <div class="mt-4">
      <%= f.submit "Sign up", class: 'w-full bg-indigo-500 text-white px-4 py-2 rounded-md hover:bg-indigo-600 focus:outline-none focus:ring focus:border-indigo-300' %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
