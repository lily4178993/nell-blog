<div class="max-w-md w-5/6 mx-auto mt-8 bg-white p-6 rounded-md shadow-md">
  <h2 class="text-2xl font-semibold mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
    <div class="space-y-2">
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-gray-300 rounded-md' %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: 'text-indigo-600' %>
        <%= f.label :remember_me, class: 'ml-2 text-gray-700' %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= f.submit "Log in", class: 'w-full bg-indigo-500 text-white px-4 py-2 rounded-md hover:bg-indigo-600 focus:outline-none focus:ring focus:border-indigo-300' %>
    </div>
  <% end %>

  <div class="flex flex-col justify-between items-center my-3 w-full">
    <%= render "devise/shared/links" %>
  </div>
</div>
